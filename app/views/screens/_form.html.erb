<div class="card">
  <div class="card-header">
    <% if @screen.name.nil? %>
      <h5><strong>Add Screen</strong></h5>
    <% else %>
      <h5><strong>Edit Screen</strong></h5>
    <% end %>
  </div>
  <div class="card-body">
    <%= form_for(@screen, remote: true) do |f| %>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :name %>
          <%= f.text_field :name, required: true, class: 'form-control', placeholder: "Screen name" %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :no_of_seats %>
          <%= f.number_field :seats, required: true, autofocus: true, autocomplete: 'seats', class: 'form-control', min: 1 %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>
