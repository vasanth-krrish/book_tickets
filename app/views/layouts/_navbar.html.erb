<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
  <div class="container">
    <a class="navbar-brand" href="/">TicketBooking</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <%= form_tag create_search_path, method: :get, class: 'form-inline my-2 my-lg-0' do %>
        <%= text_field_tag :search, params[:search], class: 'form-control mr-sm-2', placeholder: "Search for movies" %>
        <%= submit_tag 'Search', class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>

      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
          <%= link_to root_path, class: 'nav-link' do %>
          <i class="fa fa-home fa-2x" aria-hidden="true"></i>
          <% end %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to user_tickets_path, class: 'nav-link' do %>
              <i class="fa fa-ticket fa-2x" aria-hidden="true"></i>
            <% end %>
          </li>
          <% if true %>
            <li class="nav-item active">
              <%= link_to settings_path, class: 'nav-link' do %>
                <i class="fa fa-cog fa-2x" aria-hidden="true"></i>
              <% end %>
            </li>
            <li class="nav-item active">
              <%= link_to new_movie_path, class: 'nav-link' do %>
                <i class="fa fa-plus-circle fa-2x" aria-hidden="true"></i>
              <% end %>
            </li>
          <% end %>
          <li class="nav-item active">
            <%= link_to edit_user_registration_path, class: 'nav-link' do %>
                <%= image_tag user_avatar(current_user, 32), class: "rounded-circle" %>
            <% end %>
          </li>
          <li class="nav-item active">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link',
                data: {confirm: "Are you sure you want to logout?"}, style: 'color:#d63938;' do %>
                <i class="fa fa-sign-out fa-2x" aria-hidden="true"></i>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to new_user_session_path, class: 'nav-link' do %>
                <i class="fa fa-sign-in fa-2x" aria-hidden="true"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
