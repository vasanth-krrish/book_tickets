<div class="card mt-4 mb-4">
  <div class="card-body text-center">
    <%= image_tag user_avatar(@person, 124), class: "rounded-circle mb-2" %><br>
    <strong><%= @person.name %></strong><br>
  </div>
</div>

<% if @movies %>
  <h5 class="mb-3"><strong>Movies</strong></h5>
  <div class="card-columns">
    <%= render @movies %>
  </div>
<% end %>
