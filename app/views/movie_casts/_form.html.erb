<%= form_for(@movie_cast, remote: true) do |f| %>
  <%= f.hidden_field :movie_id, value: @movie.id %>
  <%= f.select :person_id, (["Select a cast member..", nil] + Person.all.map { |e| [e.name, e.id] }).compact, {},
      {class: 'form-control mb-2'}%>
  <%= f.text_field :character, class: "form-control mb-2", placeholder: "Character name" %>
  <%= f.submit "Submit", class: "btn btn-primary mb-2" %>
<% end %>
