<div class="card">
  <div class="card-header text-center">
    <% if @movie_timing.timing.nil? %>
      <h5><strong>Add Screen</strong></h5>
    <% else %>
      <h5><strong>Edit Screen</strong></h5>
    <% end %>
  </div>
  <div class="card-body">
    <%= form_for(@movie_timing, remote: true) do |f| %>
      <%= f.hidden_field :movie_id, value: @movie.id %>
      <div class="form-group">
        <%= f.label "Select a screen" %>
        <%= f.select :timing_id, @timings, {}, {class: "form-control", required: true} %>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :screening_till %>
          <%= f.date_field :screening_till, min: (Date.today + 1), class: "form-control", required: true %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :price_cents %>
          <%= f.number_field :price_cents, class: "form-control", required: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "Submit", class: "btn btn-secondary mb-2" %>
      </div>
    <% end %>
  </div>
</div>
