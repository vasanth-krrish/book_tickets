<tr id="genre-<%= genre.id %>">
  <th>
    <% if MovieGenre.find_by(genre_id: genre.id) %>
      <i class="fa fa-check" aria-hidden="true" style="color:green;"></i>
    <% end %>
    <a href="<%= genre_path(genre) %>" style="color:black;text-decoration:none;">
      <%= genre.genre %>
    </a>
  </th>
  <td class="text-center">
    <%= link_to edit_genre_path(genre), remote: true, class: 'btn btn-outline-link' do %>
      <i class="fa fa-pencil" aria-hidden="true"></i>
    <% end %>
    <%= link_to genre, method: :delete, remote: true, class: 'btn btn-outline-link', data: {confirm: "Are you sure you want to delete - #{genre.genre} ?" } do %>
      <i class="fa fa-trash-o" aria-hidden="true" style="color:red;"></i>
    <% end %>
  </td>
</tr>
